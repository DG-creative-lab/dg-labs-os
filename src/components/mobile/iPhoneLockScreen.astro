---
import iPhoneStatusBar from './iPhoneStatusBar.astro';
import iPhoneHomeIndicator from './iPhoneHomeIndicator.astro';
---

<div class="relative min-h-screen bg-gradient-to-br from-slate-900 via-slate-950 to-indigo-950 text-white">
  <a href="/mobile/" class="absolute inset-0" aria-label="Unlock"></a>
  <div class="relative z-10">
    <iPhoneStatusBar />
    <div class="mt-20 flex flex-col items-center gap-2">
      <p class="text-sm uppercase tracking-[0.3em] text-white/60">DG-Labs</p>
      <h1 class="text-6xl font-semibold">9:41</h1>
      <p class="text-sm text-white/60">Tap to unlock</p>
    </div>
  </div>
  <div class="absolute bottom-0 left-0 right-0">
    <iPhoneHomeIndicator />
  </div>
</div>
