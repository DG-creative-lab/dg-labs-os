---
interface Props {
  title?: string;
  className?: string;
  closeHref?: string;
}

const { title = 'Window', className = '', closeHref = '/desktop' } = Astro.props;
---

<section
  class={`rounded-xl border border-white/12 bg-black/70 backdrop-blur-xl shadow-[0_20px_70px_rgba(0,0,0,0.55)] overflow-hidden ${className}`}
>
  <header
    class="flex items-center gap-2 px-4 py-2 bg-black/70 border-b border-white/10 backdrop-blur-xl"
  >
    <a
      href={closeHref}
      aria-label={`Close ${title}`}
      class="w-3 h-3 rounded-full bg-red-500 hover:bg-red-600 transition-colors"></a>
    <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
    <span class="w-3 h-3 rounded-full bg-green-500"></span>
    <span class="ml-3 text-xs text-white/70">{title}</span>
  </header>
  <div class="p-4">
    <slot />
  </div>
</section>
