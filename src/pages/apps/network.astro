---
import DesktopLayout from '../../layouts/DesktopLayout.astro';
import WindowFrame from '../../components/global/WindowFrame.astro';
import { userConfig } from '../../config/index';
import { networkIdeaEdges, networkLinks, networkNodes } from '../../config/network';
import NetworkApp from '../../components/network/NetworkApp';
---

<DesktopLayout>
  <main class="mx-auto max-w-5xl px-6 pt-16 text-white">
    <WindowFrame title="Network" closeHref="/desktop">
      <div class="flex items-start justify-between gap-6">
        <div>
          <h1 class="text-2xl font-semibold">Network</h1>
          <p class="mt-2 text-white/70">
            Work graph across research, projects, experience, and education.
          </p>
        </div>
        <div class="hidden md:block text-right text-xs text-white/50">
          <p>DG-Labs OS</p>
          <p>Module: Network</p>
        </div>
      </div>

      <div class="mt-4 flex flex-wrap gap-2">
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={userConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
        >
          LinkedIn
        </a>
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={userConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
        >
          GitHub
        </a>
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={networkLinks.githubOrg}
          target="_blank"
          rel="noopener noreferrer"
        >
          ai-knowledge-hub (org)
        </a>
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={networkLinks.githubPersonal}
          target="_blank"
          rel="noopener noreferrer"
        >
          DG-creative-lab
        </a>
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={networkLinks.newsHub}
          target="_blank"
          rel="noopener noreferrer"
        >
          AI News Hub
        </a>
        <a
          class="text-sm rounded-md border border-sky-300/35 bg-sky-400/10 px-3 py-1.5 text-sky-100 hover:bg-sky-400/20 transition"
          href={networkLinks.skillsHub}
          target="_blank"
          rel="noopener noreferrer"
        >
          AI Skills Platform
        </a>
      </div>

      <NetworkApp client:load nodes={networkNodes} ideas={networkIdeaEdges} />
    </WindowFrame>
  </main>
</DesktopLayout>
