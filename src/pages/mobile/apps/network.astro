---
import iPhoneAppLayout from '../../../layouts/iPhoneAppLayout.astro';
import { userConfig } from '../../../config/index';
import { networkNodes, networkLinks } from '../../../config/network';
---

<iPhoneAppLayout>
  <main class="min-h-screen px-6 pt-16 text-white">
    <h1 class="text-2xl font-semibold">Network</h1>
    <p class="mt-2 text-white/70">Roles, systems, and ideas.</p>

    <div class="mt-4 flex flex-wrap gap-2">
      <a
        class="text-sm rounded-full bg-white/10 px-3 py-1.5"
        href={userConfig.social.linkedin}
        target="_blank"
        rel="noopener noreferrer">LinkedIn</a
      >
      <a
        class="text-sm rounded-full bg-white/10 px-3 py-1.5"
        href={networkLinks.githubOrg}
        target="_blank"
        rel="noopener noreferrer">Org</a
      >
      <a
        class="text-sm rounded-full bg-white/10 px-3 py-1.5"
        href={networkLinks.newsHub}
        target="_blank"
        rel="noopener noreferrer">Hub</a
      >
    </div>

    <div class="mt-5 space-y-3">
      {
        networkNodes.map((n) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-base font-semibold">{n.title}</h2>
                <p class="text-xs text-white/60">{n.subtitle}</p>
              </div>
              <span class="text-[10px] uppercase tracking-[0.2em] text-white/40">{n.kind}</span>
            </div>
            <p class="mt-3 text-sm text-white/75">{n.bullets[0]}</p>
            {n.links?.article && (
              <a
                class="mt-3 inline-flex text-sm rounded-full bg-white/10 px-3 py-1.5"
                href={n.links.article}
                target="_blank"
                rel="noopener noreferrer"
              >
                Article
              </a>
            )}
          </div>
        ))
      }
    </div>
  </main>
</iPhoneAppLayout>
