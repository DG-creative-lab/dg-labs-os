---
import iPhoneAppLayout from '../../../layouts/iPhoneAppLayout.astro';
import { labNotes } from '../../../config/labNotes';
---

<iPhoneAppLayout>
  <main class="min-h-screen px-6 pt-16 text-white">
    <h1 class="text-2xl font-semibold">Lab Notes</h1>
    <p class="mt-2 text-white/70">Pinned deep dives and the daily feed.</p>

    <div class="mt-5 space-y-3">
      {
        labNotes.map((note) => (
          <a
            class="block rounded-2xl border border-white/10 bg-white/5 p-4 active:bg-white/10 transition"
            href={note.url}
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-base font-semibold">{note.title}</h2>
                <p class="text-xs text-white/60">{note.subtitle}</p>
              </div>
              <span class="text-[10px] uppercase tracking-[0.2em] text-white/40">
                {note.readingTime}
              </span>
            </div>
            <div class="mt-2 flex flex-wrap gap-2">
              {note.tags.slice(0, 3).map((t) => (
                <span class="text-[10px] rounded-full bg-black/30 border border-white/10 px-2 py-1 text-white/60">
                  {t}
                </span>
              ))}
            </div>
          </a>
        ))
      }
    </div>
  </main>
</iPhoneAppLayout>
