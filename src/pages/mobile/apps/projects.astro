---
import iPhoneAppLayout from '../../../layouts/iPhoneAppLayout.astro';
import { workbench } from '../../../config/workbench';
---

<iPhoneAppLayout>
  <main class="min-h-screen px-6 pt-16 text-white">
    <h1 class="text-2xl font-semibold">Workbench</h1>
    <p class="mt-2 text-white/70">Flagship systems and writing.</p>

    <div class="mt-5 space-y-3">
      {
        workbench.slice(0, 5).map((item) => (
          <a
            class="block rounded-2xl border border-white/10 bg-white/5 p-4 active:bg-white/10 transition"
            href={item.links.site ?? item.links.repo ?? item.links.article ?? '/mobile/'}
            target={item.links.site || item.links.repo || item.links.article ? '_blank' : undefined}
            rel={
              item.links.site || item.links.repo || item.links.article
                ? 'noopener noreferrer'
                : undefined
            }
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-base font-semibold">{item.title}</h2>
                <p class="text-xs text-white/60">{item.subtitle}</p>
              </div>
              <span class="text-[10px] uppercase tracking-[0.2em] text-white/40">
                {item.category}
              </span>
            </div>
            <p class="mt-2 text-sm text-white/75">{item.summary}</p>
          </a>
        ))
      }
    </div>
  </main>
</iPhoneAppLayout>
